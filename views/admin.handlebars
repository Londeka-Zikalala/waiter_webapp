<div class="Heading">
   <h1>Weekly Roster </h1> 
</div>
<div class="key">
    <ul>
        <li>Green - There are enough waiters for the day</li>
        <li>Red - There are less than 3 waiters available for the day</li>
        <li>Orange - There are more than 4 waiters for the day</li>
    </ul>
</div>
<div class="Onduty">
    <div class="flash-success"></div>
<div class="flash-error"></div>
    <form action="/day" method="GET">
<table>
  <thead>
    <tr>
      {{#each allSchedules}}
        <th class="{{#if (lt this.count 2)}}red{{else if (and (gte this.count 3) (lte this.count 4))}}green{{else}}orange{{/if}}">
          {{@key}}
        </th>
      {{/each}}
    </tr>
  </thead>
  <tbody>
    <tr>
      {{#each allSchedules}}
        <td>
          {{#each this.waiters}}
            {{this}}<br>
          {{/each}}
        </td>
      {{/each}}
    </tr>

  </tbody>
</table>
    </form>
</div>
<form action="reset" method="GET">
    <button type="submit" name="reset">Reset</button>
</form>